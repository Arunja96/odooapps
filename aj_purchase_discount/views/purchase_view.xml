<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="purchase_discount_view" model="ir.ui.view">
        <field name="name">Purchase Discount</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook//page[1]//field[@name='order_line']//tree//field[@name='taxes_id']" position="after">
                <field name="discount" optional="show"/>
                <field name="discount_price" optional="show"/>
            </xpath>
        </field>
    </record>
</odoo>