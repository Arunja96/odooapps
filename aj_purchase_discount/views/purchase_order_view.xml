<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="purchase_order_line_view" model="ir.ui.view">
        <field name="name">Purchase Order Line Discount</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook//page[1]//field[@name='order_line']//tree//field[@name='price_unit']" position="after">
                <field name="discount"/>
            </xpath>
            <xpath expr="//notebook//page[1]//field[@name='amount_tax']" position="after">
                <field name="discount_total" widget="monetary" options="{'currency_field': 'currency_id'}"/>
            </xpath>
        </field>

    </record>
</odoo>