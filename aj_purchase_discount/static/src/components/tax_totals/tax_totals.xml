<?xml version="1.0" encoding="utf-8"?>
<templates>
    <t t-name="aj_purchase_discount.TaxTotalsDiscountField" owl="1" t-inherit="account.TaxTotalsField"
       t-inherit-mode="extension">
        <xpath expr="//tbody" position="inside">

            <tr>
                <td class="o_td_label">
                    <label class="o_form_label o_tax_total_label">Discount</label>
                </td>
                <td class="o_list_monetary">
                    <span
                            t-out="totals.discount_prices"
                            style="white-space: nowrap; font-weight: bold;"
                    />
                </td>
            </tr>
            <tr>
                <td class="o_td_label">
                    <label class="o_form_label o_tax_total_label">Disc Total</label>
                </td>
                <td class="o_list_monetary">
                    <span
                            t-out="totals.discount_total"
                            style="font-size: 1.3em; font-weight: bold; white-space: nowrap;"
                    />
                </td>
            </tr>
        </xpath>

    </t>
</templates>