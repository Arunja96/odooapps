<?xml version="1.0" encoding="UTF-8" ?>
<template id="ClearItemIcon" inherit="point_of_sale_template" xml:space="preserve">
    <t t-inherit="point_of_sale.Orderline" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('product-price')]" position="inside">
            <t>
                <i style="margin-left:6px;cursor:pointer;color:red;" id="clear_icon" class="fa fa-trash" t-on-click="clear_button_fun"/>
            </t>
        </xpath>
    </t>
</template>
